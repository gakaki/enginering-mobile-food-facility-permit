FROM alpine as builder1
# docker run -it debian:stable-slim /bin/sh
# 华为maven镜像地址
# https://repo.huaweicloud.com/apache/maven/maven-3/3.9.6/binaries/

RUN set -eux && sed -i 's/dl-cdn.alpinelinux.org/mirrors.ustc.edu.cn/g' /etc/apk/repositories
RUN apk --no-cache add libgcc bash curl git zip g++ make zlib-static openssl-dev libgfortran
ENV TZ=Asia/Shanghai
ENV NIK_HOME=/opt/java
ENV MAVEN_HOME=/opt/maven
RUN mkdir -p ${NIK_HOME} ${MAVEN_HOME}
ENV PATH=${PATH}:${MAVEN_HOME}/bin:${NIK_HOME}/bin

## install maven
RUN cd ${MAVEN_HOME} && \
    wget https://repo.huaweicloud.com/apache/maven/maven-3/3.9.6/binaries/apache-maven-3.9.6-bin.zip -O maven.zip \
    && unzip maven.zip && mv *maven*/* .
## install graavl vm sdk
RUN cd ${NIK_HOME} && \
    wget https://download.bell-sw.com/vm/23.1.2/bellsoft-liberica-vm-openjdk21.0.2+14-23.1.2+1-linux-x64-musl.tar.gz -O nik.tar.gz \
    && tar zxvf nik.tar.gz && mv bellsoft*/* .
# 299mb
#RUN tar -C ${NIK_HOME} -xzf nik.tar.gz && cd ${NIK_HOME} && mv bellsoft*/* .
#RUN echo $(gu available)
#RUN echo $(java -version)
#CMD ["/bin/sh"]

FROM builder1 as builder2
WORKDIR /app
COPY . .
RUN  mvn -Pnative native:compile
# 注意阿里云镜像在pom.xml中 最好使用nexus3 做pom缓存
FROM alpine

#COPY --from=builder2 /etc/passwd /etc/passwd
#COPY --from=builder2 /etc/group /etc/group

WORKDIR /app
EXPOSE 8080

#COPY --from=builder /app/target/java ./
COPY --from=builder2 /app/build/native/nativeCompile/java ./

RUN ls /app
#USER app:app

CMD ["/app/java"]
